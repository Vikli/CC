<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="286dp"
        android:layout_height="400dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/scan_ru"
            android:textSize="11sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/add"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/move_change"
            android:textSize="9sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/inst_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/inst_ru"
            android:textSize="11sp"
            app:layout_column="1"
            app:layout_row="1"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="50dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/quest_ru"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/exit_btn"
            android:layout_width="138dp"
            android:layout_height="138dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@mipmap/profile" />

    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="386dp"
        android:layout_height="158dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="255dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#4d72a0"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"

            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user"
                android:layout_width="447dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Users"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/profile" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>