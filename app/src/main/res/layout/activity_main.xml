<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="386dp"
        android:layout_height="109dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="255dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user"
                android:layout_width="447dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/profile" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="519dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/cast_intro_overlay_button_background_color" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="338dp"
        android:layout_height="402dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="177dp">

            <Button
                android:id="@+id/add_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/add" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/move_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/transfer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/scan_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/view" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/inst_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/tools" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="289dp">

            <Button
                android:id="@+id/exit_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/invoice" />

            <Space
                android:layout_width="47dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@mipmap/profile"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="465dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>